		<script type="text/javascript">
			$(document).ready(function(){
				$('#submit').click(function(){
					var s = $('#status').val();
					var l = $('#link').val();
					$.post('post.php', {s:s, l:l}, function(tdata){
						var data = jQuery.parseJSON(tdata);
						$('#fuq').hide();
						$('#s1').show();
						$('.tname').html(data.name);
						$('#hitrs').html(data.sts);
						$('#tri').attr('src', 'http://graph.facebook.com/'+data.id+'/picture');
					});
				});
				
				$('.back').click(function(){
					$('#s1').hide();
					$('#fuq').show();
				});
			});
		</script>
